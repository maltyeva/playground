<p id="notice"><%= notice %></p>
<p>
  <strong>User:</strong>
  <%= @post.user_id %>
</p>
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>
<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>
<% if @liked_post %>
  <%= link_to "unlike", post_like_path(@post, id: @liked_post.id.to_global_id), method: :delete  %>
<% else %>
  <%= link_to "like", post_likes_path(@post), method: :post %>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>